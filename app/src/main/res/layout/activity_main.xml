<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="ui.MainActivity">

    <ImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/logoIcon"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/usernameTextView"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/logoIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Please enter your username"
        android:maxLines="1"
        android:id="@+id/usernameInputText"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignLeft="@+id/usernameTextView"
        android:layout_alignStart="@+id/usernameTextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/usernameInputText"
        android:layout_alignLeft="@+id/usernameInputText"
        android:layout_alignStart="@+id/usernameInputText"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Please enter you password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:id="@+id/password"
        android:layout_below="@+id/passwordTextView"
        android:layout_alignLeft="@+id/passwordTextView"
        android:layout_alignStart="@+id/passwordTextView"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/logoIcon"
        android:layout_alignEnd="@+id/logoIcon"
        android:layout_alignLeft="@+id/logoIcon"
        android:layout_alignStart="@+id/logoIcon" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:id="@+id/checkBox"
        android:layout_above="@+id/loginBtn"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />
</RelativeLayout>
