<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/cardviewImage"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/shadow_stories"
            android:elevation="60dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/cardviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="195dp"
                android:maxLines="2"
                android:text="Title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardviewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardviewTitle"
                android:layout_marginTop="10dp"
                android:maxLines="4"
                android:text=""
                android:textSize="13dp" />

            <TextView
                android:id="@+id/cardviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cardviewDescription"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="3dp"
                android:text="12 July"
                android:textSize="12dp" />
            <!--<View-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_below="@+id/cardviewDescription"-->
                <!--android:layout_height="0.5dp"-->
                <!--android:background="@color/darkGray" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>